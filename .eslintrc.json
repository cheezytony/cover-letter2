{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
//        "eslint:recomended",
        "plugin:vue/vue3-strongly-recomended",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "vue/no-multiple-template-root": "off"
    }
}
